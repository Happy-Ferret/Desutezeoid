<?xml version="1.0" encoding="UTF-8"?>
<main>
	<!--setting BGMstop to "0" keeps any music from the previous page playing (unless the page has defined Background music.) BGMstop falls back to "1" if not specified.-->
	<pageconf BGimg="1" BGMstop="0" pagekeys="1">
		<title> Rain Effect with example of masking with layers.</title>
		<BG>BG2.jpg</BG>
	</pageconf>
	<pagekeys>
		<k keyid="cleartimer"/>
		<k keyid="startloop"/>
	</pagekeys>
	<forks>
		<batchset keyid="cleartimer" set="0">
			<k keyid="rainloop1"/>
			<k keyid="rainloop2"/>
			<k keyid="rainloop3"/>
		</batchset>
		<batchset keyid="startloop" set="1">
			<k keyid="rainloop1"/>
		</batchset>
		<timeout keyid="rainloop1" seconds="0.01" post="rainloop2"/>
		<timeout keyid="rainloop2" seconds="2.1" post="rainloop3"/>
		<timeout keyid="rainloop3" seconds="2.9" post="rainloop1"/>
	</forks>
	<core>
		<img x="0" y="0" vscroll="20">
			<con>rainfx1.png</con>
			<act type="none"/>
		</img>
		<img x="0" y="0" vscroll="40" hscroll="2">
			<con>rainfx1.png</con>
			<act type="none"/>
		</img>
		<img x="0" y="0" onkey="rainloop1">
			<con>rainlightning.jpg</con>
			<act type="none"/>
		</img>
		<img x="0" y="0">
			<con>examplemask.png</con>
			<act type="none"/>
		</img>
	</core>
</main>